<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.coolappz.ComunePineto" version="1.0.0">
    <name>Comune Pineto</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <icon density="ldpi" src="res/android/mipmap-ldpi/ic_launcher.png"/>
        <icon density="mdpi" src="res/android/mipmap-mdpi/ic_launcher.png"/>
        <icon density="hdpi" src="res/android/mipmap-hdpi/ic_launcher.png"/>
        <icon density="xhdpi" src="res/android/mipmap-xhdpi/ic_launcher.png"/>
        <icon density="xxhdpi" src="res/android/mipmap-xxhdpi/ic_launcher.png"/>
        <icon density="xxxhdpi" src="res/android/mipmap-xxxhdpi/ic_launcher.png"/>
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
              <!-- iOS 8.0+ -->
              <!-- iPhone 6 Plus  -->
              <icon src="res/ios/AppIcon.appiconset/Icon-App-60x60@3x.png" width="180" height="180" />
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="res/ios/AppIcon.appiconset/Icon-App-60x60@1x.png" width="60" height="60" />
              <icon src="res/ios/AppIcon.appiconset/Icon-App-60x60@2x.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="res/ios/AppIcon.appiconset/Icon-App-76x76@1x.png" width="76" height="76" />
              <icon src="res/ios/AppIcon.appiconset/Icon-App-76x76@2x.png" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="res/ios/AppIcon.appiconset/Icon-App-40x40@1x.png" width="40" height="40" />
              <icon src="res/ios/AppIcon.appiconset/Icon-App-40x40@2x.png" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="res/ios/AppIcon.appiconset/Icon-App-57x57@1x.png" width="57" height="57" />
              <icon src="res/ios/AppIcon.appiconset/Icon-App-57x57@2x.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="res/ios/AppIcon.appiconset/Icon-App-72x72@1x.png" width="72" height="72" />
              <icon src="res/ios/AppIcon.appiconset/Icon-App-72x72@2x.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="res/ios/AppIcon.appiconset/Icon-App-29x29@1x.png" width="29" height="29" />
              <icon src="res/ios/AppIcon.appiconset/Icon-App-29x29@2x.png" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="res/ios/AppIcon.appiconset/Icon-Small-50x50@1x.png" width="50" height="50" />
              <icon src="res/ios/AppIcon.appiconset/Icon-Small-50x50@2x.png" width="100" height="100" />
     </platform>
    <!-- Splashscreen -->
<platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="res/screen/Android/res/drawable-hdpi/screen.png" density="land-hdpi"/>
    <splash src="res/screen/android/res/drawable-land-ldpi/screen.png" density="land-ldpi"/>
    <splash src="res/screen/android/res/drawable-land-mdpi/screen.png" density="land-mdpi"/>
    <splash src="res/screen/android/res/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>

    <splash src="res/screen/android/res/drawable-port-hdpi/screen.png" density="port-hdpi"/>
    <splash src="res/screen/android/res/drawable-port-ldpi/screen.png" density="port-ldpi"/>
    <splash src="res/screen/android/res/drawable-port-mdpi/screen.png" density="port-mdpi"/>
    <splash src="res/screen/android/res/drawable-port-xhdpi/screen.png" density="port-xhdpi"/>
</platform>

<platform name="ios">
    <splash src="res/screen/iOS/Resources/splash/Default~iphone.png" width="320" height="480"/>
    <splash src="res/screen/iOS/Resources/splash/Default@2x~iphone.png" width="640" height="960"/>
    <splash src="res/screen/iOS/Resources/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
    <splash src="res/screen/iOS/Resources/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
    <splash src="res/screen/iOS/Resources/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
    <splash src="res/screen/iOS/Resources/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
    <splash src="res/screen/iOS/Resources/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
    <splash src="res/screen/iOS/Resources/splash/Default-667h.png" width="750" height="1334"/>
    <splash src="res/screen/iOS/Resources/splash/Default-736h.png" width="1242" height="2208"/>
    <splash src="res/screen/iOS/Resources/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
    <splash src="res/screen/iOS/Resources/splash/Default@2x~universal~anyany.png" />
    <splash src="res/screen/iOS/Resources/splash/Default@2x~universal~comany.png" />
    <splash src="res/screen/iOS/Resources/splash/Default@2x~universal~comcom.png" />
    <splash src="res/screen/iOS/Resources/splash/Default@3x~universal~anyany.png" />
    <splash src="res/screen/iOS/Resources/splash/Default@3x~universal~anycom.png" />
    <splash src="res/screen/iOS/Resources/splash/Default@3x~universal~comany.png" />

</platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
